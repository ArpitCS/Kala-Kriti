<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Kala-Kriti | Buy</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">

    <style>
      /* Reuse styles from reference */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: Arial, sans-serif;
        background-color: #fafafa;
        color: #333;
      }

      .gallery-container {
        width: 90%;
        max-width: 1200px;
        margin: 2rem auto;
      }
      .gallery-container h1 {
        text-align: center;
        margin-bottom: 2rem;
      }

      .masonry {
        column-count: 3;
        column-gap: 1.5rem;
      }

      .gallery-item {
        display: inline-block;
        margin-bottom: 1.5rem;
        width: 100%;
      }

      .card {
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .image-container {
        position: relative;
        width: 100%;
      }

      .image-container img {
        display: block;
        width: 100%;
        height: auto;
        filter: brightness(100%);
        transition: filter 0.3s ease;
      }

      .card-content {
        padding: 1rem;
      }

      .card-content h2 {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
      }

      .card-content p {
        font-size: 0.9rem;
        color: #666;
        margin: 0.2rem 0;
      }

      .card-content .price {
        font-size: 1rem;
        font-weight: bold;
        color: #333;
      }

      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.6);
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-end;
        padding: 1rem;
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .image-container:hover .overlay {
        opacity: 1;
      }

      .overlay .action-icons {
        display: flex;
        gap: 0.5rem;
      }

      .action-icons i {
        font-size: 1.5rem;
        color: black;
        cursor: pointer;
        background-color: white;
        padding: 0.5rem;
        border-radius: 50%;
      }

      .search-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-bottom: 2rem;
        padding: 15px;
        border: 1px solid #eee;
        border-radius: 50px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .search-bar input {
        flex-grow: 1;
        padding: 0.5rem;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 25px;
        margin-left: 0.5rem;
        text-align: center;
      }

      .search-bar .search-icon {
        display: inline-block;
        background-color: black;
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        font-size: 1.3rem;
        font-weight: bold;
        border: none;
        cursor: pointer;
        margin-right: 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .search-bar .clear-button {
        display: inline-block;
        background-color: red;
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        font-size: 1.3rem;
        font-weight: bold;
        border: none;
        cursor: pointer;
      }

      .buy-button {
        background-color: green;
        color: white;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        margin-top: 0.5rem;
      }

      @media screen and (max-width: 992px) {
        .masonry {
          column-count: 2;
        }

        .search-bar input {
          width: 80%;
        }
      }
      @media screen and (max-width: 600px) {
        .masonry {
          column-count: 1;
        }

        .search-bar input {
          width: 90%;
        }
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header>
      <div class="header-container">
        <div class="header-left">
          <a href="/contact" class="contact-btn">
            <i class="fa fa-phone"></i>
          </a>
          <a href="/#about">About Us</a>
          <a href="/portfolio">Portfolio</a>
        </div>
        <div class="header-center">
          <a href="/gallery">Gallery</a>
          <a href="/artists">Artists</a>
          <a href="/news">News</a>
          <a href="/">
            <img
              src="/logo-color.png"
              alt="Kala-Kriti Logo"
              class="logo"
            />
          </a>
          <a href="/buy">Buy</a>
          <a href="/sell">Sell</a>
          <a href="/events">Events</a>
        </div>
        <div class="header-right">
          <a href="/login"><i class="fas fa-user"></i></a>
          <a href="/favorites"><i class="fas fa-heart"></i></a>
          <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
        </div>
      </div>
    </header>

    <!-- Search Bar and Gallery -->
    <div class="gallery-container">
      <h1>Buy Art</h1>
      <div class="search-bar">
        <button class="clear-button" onclick="clearSearch()">&#x2715;</button>
        <input id="search-input" type="text" placeholder="Search artworks..." />
        <div class="search-icon" onclick="searchArtworks()">
          <i class="fas fa-search"></i>
        </div>
      </div>
      <div id="art-gallery" class="masonry">
        <% artworks.forEach(art => { %>
          <div class="gallery-item">
            <div class="card">
              <div class="image-container">
                <img src="<%= art.image %>" alt="<%= art.title %>" />
              </div>
              <div class="card-content">
                <h2><%= art.title %></h2>
                <p><%= art.dimensions || 'Dimensions not available' %></p>
                <p><%= art.author || 'Author information not available' %></p>
                <p><%= art.description || 'Description not available' %></p>
                <p><%= art.location || 'Location not available' %></p>
                <p class="price">$<%= art.price %></p>
                <button class="buy-button" onclick="addToCart('<%= art.id %>')">Add to Cart</button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer-section">
      <div class="footer-content">
        <div class="footer-logo">
          <img src="/logo-color.png" alt="Kala-Kriti Logo" />
          <p>contact@kala-kriti.com</p>
          <div class="social-icons">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-pinterest"></i></a>
          </div>
        </div>
        <div class="footer-links">
          <h3>Mediums</h3>
          <ul>
            <li><a href="#">Painting</a></li>
            <li><a href="#">Limited Edition</a></li>
            <li><a href="#">Drawing</a></li>
            <li><a href="#">Sculpture</a></li>
            <li><a href="#">Photography</a></li>
          </ul>
        </div>
        <div class="footer-links">
          <h3>Informations</h3>
          <ul>
            <li><a href="#">Who are we?</a></li>
            <li><a href="#">Terms & Conditions</a></li>
            <li><a href="#">Privacy / Cookies</a></li>
            <li><a href="#">Legal notice</a></li>
          </ul>
        </div>
        <div class="footer-links">
          <h3>Account</h3>
          <ul>
            <li><a href="#">Log in</a></li>
            <li><a href="#">Create account</a></li>
            <li><a href="#">Help / FAQ</a></li>
            <li><a href="#">How it works?</a></li>
            <li><a href="#">Contact us</a></li>
          </ul>
        </div>
        <div class="footer-links">
          <h3>Instagram</h3>
          <p>There are not any images in this Instagram.</p>
        </div>
      </div>
    </footer>

    <script>
      let artworks = [];

      // Moved Client Side Artwork Render to EJS
      // fetch('/data/artwork.json')
      //   .then(response => response.json())
      //   .then(data => {
      //     artworks = data;
      //     displayGallery(artworks);
      //   })
      //   .catch(error => {
      //     console.error('Error loading artwork data:', error);
      //   });

      function displayGallery(items) {
        const gallery = document.getElementById('art-gallery');
        gallery.innerHTML = '';
        items.forEach(art => {
          const item = document.createElement('div');
          item.classList.add('gallery-item');

          item.innerHTML = `
            <div class="card">
              <div class="image-container">
                <img src="${art.image}" alt="${art.title}" />
              </div>
              <div class="card-content">
                <h2>${art.title}</h2>
                <p>${art.dimensions || 'Dimensions not available'}</p>
                <p>${art.author || 'Author information not available'}</p>
                <p>${art.description || 'Author information not available'}</p>
                <p>${art.location || 'Location not available'}</p>
                <p class="price">$${art.price}</p>
                <button class="buy-button" onclick="addToCart('${art.id}')">Add to Cart</button>
              </div>
            </div>
          `;

          gallery.appendChild(item);
        });
      }

      function searchArtworks() {
        const query = document.getElementById('search-input').value.toLowerCase();
        if (!query.trim()) {
          alert('Please enter a search term');
          return;
        }

        const filteredArtworks = artworks.filter(art =>
          art.title.toLowerCase().includes(query) ||
          art.author.toLowerCase().includes(query) ||
          art.description.toLowerCase().includes(query)
        );

        displayGallery(filteredArtworks);
      }

      function clearSearch() {
        document.getElementById('search-input').value = '';
        displayGallery(artworks);
      }

      function addToCart(artId) {
        const art = artworks.find(a => a.id === artId);
        if (!art) {
          alert('Artwork not found');
          return;
        }

        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        const exists = cart.find(item => item.id === artId);

        if (exists) {
          alert('This artwork is already in your cart');
        } else {
          cart.push(art);
          localStorage.setItem('cart', JSON.stringify(cart));
          alert(`${art.title} has been added to your cart`);
        }
      }

      function toggleWishlist(artId) {
        const art = artworks.find(a => a.id === artId);
        if (!art) {
          alert('Artwork not found');
          return;
        }

        let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];
        const index = wishlist.findIndex(item => item.id === artId);

        if (index >= 0) {
          wishlist.splice(index, 1);
          alert(`${art.title} has been removed from your wishlist`);
        } else {
          wishlist.push(art);
          alert(`${art.title} has been added to your wishlist`);
        }

        localStorage.setItem('wishlist', JSON.stringify(wishlist));
      }
    </script>
  </body>
</html>
